    anchors.left: parent.left
    margin-left: 55
    margin-top: 57

    UIButton
      id: 20devoted
      image-source: /images/heldsmachine/heldsfusionmachine/FusionHeldTier1
      size: 149 28
      anchors.top: parent.top
      opacity: 0.8
      anchors.left: parent.left
      margin-top: 2
      margin-left: 3
      !tooltip: tr("Ao fundir 3x Held Points Tier 1, você receberá 1x Held (Tier: 1) aleatoriamente.\n\*O X-Lucky está disponível nessa fusão.")
      @onClick:  g_game.talk("HELDFUSION_3TIER1#")
      $hover:
        opacity: 1.0
      $pressed:
        opacity: 0.6

