  image-source: /images//heldsmachine/heldsfusionmachine/heldsfusionmachine
  size: 277 364
  anchors.verticalCenter: parent.verticalCenter
  anchors.horizontalCenter: parent.horizontalCenter
  &save: true
  @onEscape: modules.game_heldfusion.hide()

  ScrollablePanel
